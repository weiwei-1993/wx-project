.car-wrap{
    width: 100%;
    height: 100%;
    background: #eee;
}
.car-wrap .car-noshop image{
    width: 100%;
}
.car-wrap .car-noshop{
    width: 100%;
    height:100%;
}
.shop-list-wrap{
    display: flex;
    width: 100%;
    height: 120rpx;
    background: #fff;
    border-bottom: 1px solid #eee;
}
.shop-list-wrap .icon{
    width: 90rpx;
    height: 100%;
    text-align: center;
    line-height: 90rpx;
    color: #ccc;
}
.shop-list-wrap .icon .iconwrap {
    width: 40rpx;
    height: 40rpx;
    margin: 40rpx auto;
    box-sizing: border-box;
    border:1px solid #ccc;
    border-radius: 50%;
    font-size: 0;
}
.shop-list-wrap .icon icon {
    margin: 40rpx auto;
}
.shop-list-wrap .img{
    width: 120rpx;
    height: 100%;
    padding: 10rpx;
}
.shop-list-wrap .img image{
    width: 100%;
    height: 100rpx;
}
.shop-list-wrap .shop{
    flex: 1;
    height: 100%;
    padding: 0 12rpx;
    max-width: 310rpx;
}
.shop-list-wrap .shop .name,.shop-list-wrap .shop .price{
    /*width: 100%;*/
    height: 50rpx;
    line-height: 70rpx;
    font-size: 24rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.shop-list-wrap .shop .price{
    line-height: 40rpx;
    color: #999;
}
.shop-list-wrap .operation{
    display: flex;
    width: 150rpx;
    height: 100%;
    align-items: center;
    padding-right: 30rpx;
}
.shop-list-wrap .operation .calculate{
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    font-size: 30rpx;
    border: 1px solid #ddd;
    /*align-content: center;*/
}
.shop-list-wrap .operation .count-text{
    flex: 1;
    font-size: 26rpx;
    text-align: center;
}
.footer{
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    width: 100%;
    height: 110rpx;
    background: #fff;
}
.footer .total-price{
    flex: 1;
    text-align: right;
    padding-right: 20rpx;
    font-size: 30rpx;
    line-height: 110rpx;
}
.footer .to-buy{
    width: 200rpx;
    background: #000;
    color: #fff;
    font-size: 36rpx;
    line-height: 110rpx;
    text-align: center;
}
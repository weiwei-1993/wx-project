@import "../components/banner/banner.wxss";
.name,.price,.title,.detail-wrape{
    width: 100%;
    line-height: 90rpx;
    line-height: 90rpx;
    font-size: 30rpx;
    text-align: center;
    background: #fff;
    height: 90rpx;
}
.name{
    line-height: 120rpx;
}
.price{
    line-height: 60rpx;
    color: red;
}
.title{
    font-size: 36rpx;
}
.detail-wrape{
    line-height: 60rpx;
    padding: 0 30rpx;
    color: #999;
    min-height: 200rpx;
    text-align: left;
}
.footer{
    display: flex;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 10;
    width: 100%;
    height: 110rpx;
    background: #fff;
}
.footer .car{
    flex:1;
    text-align: center;
    border-right: 1px solid #eee;
    position: relative;
}
.footer .car .count{
    /*color: red;*/
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    display: block;
    width: 40rpx;
    height: 40rpx;
    background: red;
    color: #fff;
    border-radius: 50%;
    padding: 1rpx;
    font-size: 26rpx;
    line-height: 40rpx;
}
.footer .view2{
    flex: 2;
}
.footer .href{
    width: 100%;
    height: 100%;
}
.footer .car image{
    width: 60rpx;
    height: 60rpx;
    margin-top: 28rpx;
}
.footer .buy{
    height: 100%;
    background: #000;
    text-align: center;
    line-height: 110rpx;
    color: #fff;
    font-size: 32rpx;
}
.footer .add-car{
    height: 100%;
    background: #ffffff;
    text-align: center;
    line-height: 120rpx;
    color: red;
    font-size: 32rpx;
}
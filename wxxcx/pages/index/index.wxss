@import "../components/banner/banner.wxss";
@import "../components/product/product.wxss";
@import "../components/nomore/nomore.wxss";
/**index.wxss**/
.order-wrap{
    width:100%;
    display: flex;
    height: 90rpx;
    border-bottom: 1px solid #eee;
    background: #fff;
}
.order-wrap text{
    flex: 1;
    text-align: center;
    line-height: 90rpx;
    font-size: 28rpx;
}
.order-wrap text.active{
    font-weight: 700;
    color: red;
}
.title-wrap{
    width: 100%;
    height: 90rpx;
    background: #fff;
}
.title-wrap .content{
    display: flex;
    width: 70%;
    margin: 0 auto;
}
.title-wrap .content .line{
    flex: 1;
    height: 45rpx;
    border-bottom: 1px solid #000;
}
.title-wrap .content .text{
    width: 260rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 28rpx;
}
.product-box{
    background: #fff;
}
.i-product-wrap{
    width: 100%;
    height: auto;
    padding-top: 30rpx;
    background: #fff;
}
.i-product-wrap .product{
    display: block;
    width: 100%;
    padding:0 30rpx;
}
.i-product-wrap .product .img{
    height: 400rpx;
}





.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128 rpx;
    height: 128 rpx;
    margin: 20 rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}
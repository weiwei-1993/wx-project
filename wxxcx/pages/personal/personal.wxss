.head{
    width: 100%;
    height: 400rpx;
    background: #222;
    padding-top: 80rpx;
}
.head .icon{
    width: 220rpx;
    height: 220rpx;
    margin: 0 auto;
    border-radius: 50%;
    overflow: hidden;
}
.head .icon image{
    width: 100%;
    height: 100%;
}
.head  .name{
    width: 100%;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
}
.block{
    width: 100%;
    height: auto;
    background: #fff;
}
.block .nav{
    display: flex;
    /*width: 100%;*/
    line-height: 90rpx;
    border-bottom: 1px solid #eee;
    font-size: 30rpx;
}
.block .nav:last-child{
    border-bottom: 0;
}
.block .icon{
    width:30rpx;
    padding: 0 30rpx;
}
.block .text{
    flex:1;
}
.block image{
    width: 40rpx;
    height: 40rpx;
}
